<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Post-it Notes</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=IM+Fell+English+SC&display=swap" rel="stylesheet">
</head>
<body>
    <h1>Post-it Notes</h1>

    <!-- Flash Messages -->
    <% if (typeof messages !== 'undefined' && messages.success) { %>
        <p class="message success"><%= messages.success %></p>
    <% } %>
    
    <!-- Note Form -->
    <form action="/add-note" method="POST">
        <textarea name="text" placeholder="Write your note here..." required></textarea>
        
        <!-- Color Options Frame -->
        <div class="color-options-container">
            <div class="color-options">
                <% const colors = ["#ffadad", "#ffd6a5", "#fdffb6", "#caffbf", "#9bf6ff", "#a0c4ff", "#bdb2ff", "#ffc6ff", "#d0f4de"]; %>
                <% colors.forEach((color, index) => { %>
                    <label style="background: <%= color %>;">
                        <input type="radio" name="color" value="<%= color %>" <%= index === 0 ? "checked" : "" %>>
                        <span></span>
                    </label>
                <% }) %>
            </div>
        </div>

        <button type="submit" class="create-note">Create Note</button>
    </form>

    <!-- Display Notes -->
    <div class="notes-container">
        <!-- Notes will be displayed here by client-side JavaScript -->
    </div>

    <script src="/script.js"></script>
</body>
</html>
